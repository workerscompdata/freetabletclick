<!-- Eligibility Checker Logic -->
<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const verifyBtn = document.getElementById("verify-btn");
    const programCbs = document.querySelectorAll(".program-cb");
    const householdSizeInput = document.getElementById("household-size");
    const incomeInput = document.getElementById("annual-income");
    const resultBox = document.getElementById("result-box");
    const resultIcon = document.getElementById("result-icon");
    const resultTitle = document.getElementById("result-title");
    const resultMessage = document.getElementById("result-message");
    const resultAction = document.getElementById("result-action");

    if(!verifyBtn) return; // Prevent errors if on different layout

    // 2026 Proxy FPG 135% (Base $21,128 for 1, +$7,425 per additional)
    const baseIncomeLimit = 21128;
    const additionalPersonLimit = 7425;

    verifyBtn.addEventListener("click", () => {
      let isEligible = false;
      let reason = "";

      // Check 1: Program Participation
      const isProgramChecked = Array.from(programCbs).some(cb => cb.checked);
      
      if (isProgramChecked) {
        isEligible = true;
        reason = "Based on your participation in a qualifying government program, you are highly likely to be eligible for a free government tablet and internet discounts.";
      } else {
        // Check 2: Income Level
        const size = parseInt(householdSizeInput.value) || 1;
        const incomeValue = incomeInput.value.trim();
        
        if (incomeValue !== "") {
          const income = parseFloat(incomeValue);
          const incomeThreshold = baseIncomeLimit + ((size - 1) * additionalPersonLimit);
          
          if (income <= incomeThreshold) {
            isEligible = true;
            reason = `Based on your household size of ${size} and estimated income, you fall below the 135% Federal Poverty Guideline limit (approx. $${incomeThreshold.toLocaleString()}), meaning you are likely eligible.`;
          } else {
            reason = `Based on the provided income and household size, your income appears to be above the standard 135% Federal Poverty Guideline threshold (approx. $${incomeThreshold.toLocaleString()}). However, local programs may still be available.`;
          }
        } else {
           // No programs checked and no income entered
           resultBox.classList.remove("hidden", "bg-green-50", "border-green-200", "bg-red-50", "border-red-200");
           resultBox.classList.add("bg-orange-50", "border-orange-200", "text-orange-900");
           resultIcon.innerHTML = `<svg class="w-6 h-6 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>`;
           resultTitle.innerText = "Information Needed";
           resultTitle.className = "text-lg font-bold text-orange-800";
           resultMessage.innerText = "Please either select a qualifying program or enter your household income to check eligibility.";
           resultMessage.className = "text-sm mt-2 font-medium leading-relaxed text-orange-800";
           resultAction.classList.add("hidden");
           return;
        }
      }

      // Display Results
      resultBox.classList.remove("hidden", "bg-orange-50", "border-orange-200");
      if (isEligible) {
        resultBox.classList.add("bg-green-50", "border-green-200");
        resultBox.classList.remove("bg-red-50", "border-red-200");
        
        resultIcon.innerHTML = `<svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`;
        resultTitle.innerText = "Great News! You Are Likely Eligible.";
        resultTitle.className = "text-lg font-bold text-green-800";
        resultMessage.innerText = reason;
        resultMessage.className = "text-sm mt-2 font-medium leading-relaxed text-green-800";
        resultAction.classList.remove("hidden");
      } else {
        resultBox.classList.add("bg-red-50", "border-red-200");
        resultBox.classList.remove("bg-green-50", "border-green-200");
        
        resultIcon.innerHTML = `<svg class="w-6 h-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>`;
        resultTitle.innerText = "Eligibility Not Confirmed";
        resultTitle.className = "text-lg font-bold text-red-800";
        resultMessage.innerText = reason;
        resultMessage.className = "text-sm mt-2 font-medium leading-relaxed text-red-800";
        resultAction.classList.add("hidden");
      }
    });
  });
</script>