---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
---

<Layout title="Get Your Free Government Tablet and Internet Today | 2026 Guide">
  <Header />
  
  <main id="main-content" class="w-full flex-1 flex flex-col items-center">
    
    <!-- ==========================================
         SECTION 1: PREMIUM HERO
    =========================================== -->
    <section class="relative w-full min-h-[85vh] flex items-center justify-center overflow-hidden hero-gradient text-white pt-20 pb-24 lg:pt-32 lg:pb-32">
      
      <!-- Background Decorative Elements for Premium Feel -->
      <div class="absolute inset-0 z-0 overflow-hidden pointer-events-none">
        <div class="absolute -top-[20%] -right-[10%] w-[70%] h-[70%] rounded-full bg-blue-500/10 blur-[120px]"></div>
        <div class="absolute -bottom-[20%] -left-[10%] w-[60%] h-[60%] rounded-full bg-purple-500/10 blur-[120px]"></div>
      </div>

      <div class="relative z-10 mx-auto w-full max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 gap-16 lg:grid-cols-12 lg:items-center">
          
          <!-- Content Column (Left) -->
          <div class="flex flex-col items-start lg:col-span-7">
            
            <!-- Trust Badge -->
            <div class="inline-flex items-center gap-2 rounded-full border border-white/20 bg-white/10 backdrop-blur-md px-4 py-2 text-sm font-semibold text-blue-100 mb-8 shadow-sm">
              <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>ðŸ‡ºðŸ‡¸ 100% Legitimate Federal & State Info | Updated 2026</span>
            </div>

            <!-- H1 Headline -->
            <h1 class="text-4xl font-extrabold leading-tight tracking-tight sm:text-5xl lg:text-6xl text-white">
              Get Your <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-300 to-blue-100">Free Government Tablet</span> Today
            </h1>

            <!-- Subheadline -->
            <p class="mt-6 text-lg leading-relaxed text-blue-100 sm:text-xl font-medium max-w-2xl">
              Find out how eligible households may get a free government tablet, low-cost internet, or a free tablet with EBT through Lifeline and local digital inclusion programs.
            </p>

            <!-- Checkmark Bullet Points (Grid Layout) -->
            <div class="mt-10 grid grid-cols-1 sm:grid-cols-2 gap-4 w-full max-w-2xl">
              {
                [
                  "No hidden fees or upfront costs",
                  "Fast 7-10 day online approval",
                  "Free or discounted mobile data",
                  "Multiple trusted providers",
                  "Available in 50 states",
                  "Scam-safe 2026 guidance"
                ].map((point) => (
                  <div class="flex items-center gap-3">
                    <div class="flex-shrink-0 flex items-center justify-center w-6 h-6 rounded-full bg-green-500/20 text-green-400">
                      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                      </svg>
                    </div>
                    <span class="text-base font-medium text-white">{point}</span>
                  </div>
                ))
              }
            </div>

            <!-- CTAs -->
            <div class="mt-12 flex w-full flex-col gap-4 sm:flex-row">
              <a href="#apply" class="inline-flex items-center justify-center rounded-lg bg-blue-600 px-8 py-4 text-lg font-bold text-white shadow-xl hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-500 transition-all duration-300 transform hover:-translate-y-1 group">
                Apply Now
                <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              </a>
              <button type="button" class="inline-flex items-center justify-center rounded-lg border border-white/30 bg-white/5 backdrop-blur-sm px-8 py-4 text-lg font-bold text-white hover:bg-white/10 transition-all duration-300">
                Check My Eligibility
              </button>
            </div>
          </div>

          <!-- Statistics & Trust Cards Column (Right) -->
          <div class="relative lg:col-span-5 flex flex-col justify-center gap-6 mt-12 lg:mt-0 lg:pl-8">
            
            <!-- Stat Card 1 -->
            <div class="glass-panel rounded-2xl p-6 shadow-2xl transform lg:translate-x-4 transition-transform hover:scale-[1.02]">
              <div class="flex items-center gap-4">
                <div class="flex items-center justify-center w-14 h-14 rounded-full bg-blue-500/20 text-blue-300">
                  <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-3xl font-bold text-white tracking-tight">2.3M+</h3>
                  <p class="text-sm text-blue-200 font-medium">Families Guided Nationwide</p>
                </div>
              </div>
            </div>

            <!-- Stat Card 2 -->
            <div class="glass-panel rounded-2xl p-6 shadow-2xl transform lg:-translate-x-4 transition-transform hover:scale-[1.02]">
              <div class="flex items-center gap-4">
                <div class="flex items-center justify-center w-14 h-14 rounded-full bg-green-500/20 text-green-400">
                  <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-3xl font-bold text-white tracking-tight">Scam-Safe</h3>
                  <p class="text-sm text-blue-200 font-medium">Verified 2026 Provider Links</p>
                </div>
              </div>
            </div>

            <!-- Stat Card 3 -->
            <div class="glass-panel rounded-2xl p-6 shadow-2xl transform lg:translate-x-4 transition-transform hover:scale-[1.02]">
              <div class="flex items-center gap-4">
                <div class="flex items-center justify-center w-14 h-14 rounded-full bg-accent/20 text-accent">
                  <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-3xl font-bold text-white tracking-tight">7-10 Days</h3>
                  <p class="text-sm text-blue-200 font-medium">Average Processing Time</p>
                </div>
              </div>
            </div>

          </div>
        </div>
        
        <!-- Bottom Disclaimer Strip -->
        <div class="mt-16 pt-8 border-t border-white/10 text-center lg:text-left">
          <p class="text-xs text-blue-200/60 leading-relaxed max-w-4xl mx-auto lg:mx-0">
            *Device availability, shipping times, and co-pay amounts vary by provider, state, and eligibility type. Lifeline is a monthly service discount program, and tablet offers depend on participating providers. (Universal Service Administrative Company)
          </p>
        </div>
      </div>
    </section>

    <!-- Hum baqi sections yahan add karte jayenge -->

  </main>
  
  <Footer />
</Layout>