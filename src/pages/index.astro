     ELIGIBILITY CHECKER LOGIC (FAST, NO LIBS)
=========================================== -->
<script>
  document.addEventListener('astro:page-load', () => {
    const verifyBtn = document.getElementById('verify-btn');
    if (!verifyBtn) return;

    const programCbs = Array.from(document.querySelectorAll('.program-cb'));
    const householdSizeEl = document.getElementById('household-size');
    const annualIncomeEl = document.getElementById('annual-income');

    const resultBox = document.getElementById('result-box');
    const resultIcon = document.getElementById('result-icon');
    const resultTitle = document.getElementById('result-title');
    const resultMsg = document.getElementById('result-message');
    const resultAction = document.getElementById('result-action');

    const incomeThresholds = {
      1: 20000,
      2: 27000,
      3: 34000,
      4: 41000,
      5: 48000,
      6: 55000
    };

    function showResult(type, title, message, showAction) {
      if (!resultBox) return;

      resultBox.classList.remove('hidden');

      // Reset styling
      resultBox.className = 'mt-6 p-6 rounded-xl border';
      resultIcon.innerHTML = '';
      resultTitle.className = 'text-lg font-bold';
      resultMsg.className = 'text-sm mt-2 font-medium leading-relaxed';
      resultAction.classList.add('hidden');

      if (type === 'good') {
        resultBox.classList.add('border-green-200', 'bg-green-50');
        resultTitle.classList.add('text-green-900');
        resultMsg.classList.add('text-green-800');
        resultIcon.innerHTML = `
          <div class="w-9 h-9 rounded-full bg-green-100 text-green-700 flex items-center justify-center">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        `;
      } else if (type === 'maybe') {
        resultBox.classList.add('border-blue-200', 'bg-blue-50');
        resultTitle.classList.add('text-blue-900');
        resultMsg.classList.add('text-blue-800');
        resultIcon.innerHTML = `
          <div class="w-9 h-9 rounded-full bg-blue-100 text-blue-700 flex items-center justify-center">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        `;
      } else {
        resultBox.classList.add('border-orange-200', 'bg-orange-50');
        resultTitle.classList.add('text-orange-900');
        resultMsg.classList.add('text-orange-800');
        resultIcon.innerHTML = `
          <div class="w-9 h-9 rounded-full bg-orange-100 text-orange-700 flex items-center justify-center">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9 9 0 100-18 9 9 0 000 18z" />
            </svg>
          </div>
        `;
      }

      resultTitle.textContent = title;
      resultMsg.textContent = message;

      if (showAction && resultAction) {
        resultAction.classList.remove('hidden');
      }
    }

    verifyBtn.addEventListener('click', () => {
      const selectedPrograms = programCbs.filter(cb => cb.checked).map(cb => cb.value);
      const householdSize = householdSizeEl ? parseInt(householdSizeEl.value, 10) : 1;
      const incomeValRaw = annualIncomeEl ? annualIncomeEl.value : '';
      const incomeVal = incomeValRaw === '' ? NaN : Number(incomeValRaw);

      // Program-based eligibility
      if (selectedPrograms.length > 0) {
        showResult(
          'good',
          'Likely Eligible (Program-Based)',
          'Because you participate in a qualifying program, you may qualify under program-based rules. Next, compare providers and confirm availability in your ZIP code.',
          true
        );
        return;
      }

      // Income-based eligibility
      if (!Number.isFinite(incomeVal) || incomeVal <= 0) {
        showResult(
          'maybe',
          'Add Your Income to Check the Income Path',
          'Select your household size and enter an estimated annual income to check income-based eligibility.',
          false
        );
        return;
      }

      const key = householdSize >= 6 ? 6 : householdSize;
      const threshold = incomeThresholds[key];

      if (incomeVal <= threshold) {
        showResult(
          'good',
          'Likely Eligible (Income-Based)',
          'Your estimate looks within common income-based ranges used for support programs. Next, compare providers and confirm enrollment steps for your state.',
          true
        );
      } else if (incomeVal <= threshold * 1.15) {
        showResult(
          'maybe',
          'Possibly Eligible (Near the Limit)',
          'Your estimate is close to typical income thresholds. You may still qualify depending on official guidelines and household details. Compare providers and verify requirements.',
          true
        );
      } else {
        showResult(
          'warn',
          'Not Clearly Eligible From This Quick Check',
          'Based on this estimate, you may not qualify through the basic income path. Some users still qualify through other program-based pathways. Review state and local options.',
          true
        );
      }
    });
  });
</script>