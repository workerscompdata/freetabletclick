---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
---

<Layout title="StandUp Wireless Free Phone & Tablet Program | 2026 Guide">
  <Header />
  
  <main id="main-content" class="w-full flex-1 flex flex-col items-center">
    
    <!-- ==========================================
         SECTION 1: PREMIUM HERO
    =========================================== -->
    <section class="relative w-full flex flex-col items-center justify-center overflow-hidden bg-[#0f172a] text-white pt-20 pb-32 lg:pt-28 lg:pb-40" style="background-image: radial-gradient(circle at top right, rgba(249, 115, 22, 0.15), transparent 45%), radial-gradient(circle at bottom left, rgba(37, 99, 235, 0.2), transparent 45%);">
      <div class="relative z-10 mx-auto w-full max-w-5xl px-4 sm:px-6 lg:px-8 text-center">
        
        <!-- Trust Badge -->
        <div class="inline-flex items-center gap-2 rounded-full border border-white/20 bg-white/10 px-4 py-1.5 text-sm font-semibold text-orange-100 mb-6 shadow-sm">
          <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          <span>FCC Authorized Lifeline Provider</span>
        </div>

        <!-- H1 Headline -->
        <h1 class="text-4xl font-extrabold leading-tight tracking-tight sm:text-5xl lg:text-6xl text-white mb-6">
          StandUp Wireless <span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-orange-200">Free Phone & Tablet Program</span>
        </h1>
        
        <!-- Subtitle -->
        <p class="text-lg text-blue-100 sm:text-xl leading-relaxed font-medium max-w-3xl mx-auto mb-10">
          Stay connected with free monthly high-speed data, unlimited talk, and text on a reliable 5G network. Apply today for your free smartphone or discounted tablet.
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-5">
          <a href="https://standupwireless.com/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center rounded-lg bg-orange-600 px-8 py-4 text-lg font-bold text-white shadow-xl hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-500 transition-all duration-300 transform hover:-translate-y-1 w-full sm:w-auto group">
            Apply Now on Official Site
            <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" /></svg>
          </a>
          <a href="/eligibility" class="inline-flex items-center justify-center rounded-lg border border-white/30 bg-white/5 backdrop-blur-sm px-8 py-4 text-lg font-bold text-white hover:bg-white/10 transition-all duration-300 w-full sm:w-auto">
            Check Eligibility First
          </a>
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 2: QUICK OVERVIEW & RATING CARD
    =========================================== -->
    <section class="relative w-full bg-muted/30 pb-16 lg:pb-24" style="content-visibility: auto;">
      <div class="relative z-20 mx-auto w-full max-w-6xl px-4 sm:px-6 lg:px-8 -mt-16 sm:-mt-20 mb-8">
        <div class="bg-white rounded-2xl p-6 sm:p-10 shadow-[0_20px_50px_-12px_rgba(0,0,0,0.1)] border border-border flex flex-col md:flex-row items-center justify-between gap-8">
          
          <!-- Rating -->
          <div class="flex flex-col items-center md:items-start text-center md:text-left shrink-0">
            <span class="text-sm font-bold text-foreground/50 uppercase tracking-wider mb-2">Provider Rating</span>
            <div class="flex items-center gap-2">
              <span class="text-4xl font-extrabold text-foreground">4.3</span>
              <div class="flex text-yellow-400">
                <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24"><path d="M12 15.4l-3.76 2.27 1-4.28-3.32-2.88 4.38-.38L12 6.1l1.71 4.04 4.38.38-3.32 2.88 1 4.28z"/></svg>
              </div>
            </div>
            <span class="text-sm text-foreground/60 font-medium mt-1">Known for fast & easy enrollment</span>
          </div>
          
          <div class="hidden md:block w-px h-16 bg-border"></div>

          <!-- Key Specs -->
          <div class="grid grid-cols-2 sm:flex sm:flex-row gap-6 sm:gap-10 w-full md:w-auto justify-around">
            <div class="flex flex-col items-center md:items-start text-center md:text-left">
              <div class="flex items-center gap-2 mb-1">
                <svg class="w-5 h-5 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z" /></svg>
                <span class="font-bold text-foreground">Network</span>
              </div>
              <span class="text-foreground/75 font-medium text-sm">T-Mobile 5G</span>
            </div>
            
            <div class="flex flex-col items-center md:items-start text-center md:text-left">
              <div class="flex items-center gap-2 mb-1">
                <svg class="w-5 h-5 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" /></svg>
                <span class="font-bold text-foreground">Devices</span>
              </div>
              <span class="text-foreground/75 font-medium text-sm">Phones & 8" Tablets</span>
            </div>

            <div class="flex flex-col items-center md:items-start text-center md:text-left">
              <div class="flex items-center gap-2 mb-1">
                <svg class="w-5 h-5 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5zm6-10.125a1.875 1.875 0 11-3.75 0 1.875 1.875 0 013.75 0zm1.294 6.336a6.721 6.721 0 01-3.17.789 6.721 6.721 0 01-3.168-.789 3.376 3.376 0 016.338 0z" /></svg>
                <span class="font-bold text-foreground">Activation</span>
              </div>
              <span class="text-foreground/75 font-medium text-sm">Free SIM</span>
            </div>

            <div class="flex flex-col items-center md:items-start text-center md:text-left">
              <div class="flex items-center gap-2 mb-1">
                <svg class="w-5 h-5 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                <span class="font-bold text-foreground">Fees</span>
              </div>
              <span class="text-foreground/75 font-medium text-sm">No Hidden Fees</span>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- ==========================================
         SECTION 3: WHAT MAKES STANDUP DIFFERENT?
    =========================================== -->
    <section class="relative w-full py-16 bg-white border-t border-border">
      <div class="mx-auto w-full max-w-7xl px-4 sm:px-6 lg:px-8">
        
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-extrabold tracking-tight text-foreground sm:text-4xl mb-4">
            What Does StandUp Wireless Offer?
          </h2>
          <p class="text-lg text-foreground/75 leading-relaxed">
            StandUp Wireless removes the friction from government assistance. They are widely praised for their straightforward approval system and reliable network coverage.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          
          <div class="bg-muted/30 rounded-2xl p-8 border border-border shadow-sm flex flex-col hover:border-orange-300 transition-colors">
            <div class="w-12 h-12 rounded-xl bg-orange-50 text-orange-500 flex items-center justify-center mb-6">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
            </div>
            <h3 class="text-xl font-bold text-foreground mb-3">Fast & Easy Enrollment</h3>
            <p class="text-foreground/75 leading-relaxed text-sm font-medium">
              We know paperwork can be overwhelming. StandUp Wireless has heavily invested in a streamlined, user-friendly digital application that checks your eligibility and approves you rapidly.
            </p>
          </div>

          <div class="bg-muted/30 rounded-2xl p-8 border border-border shadow-sm flex flex-col hover:border-orange-300 transition-colors relative overflow-hidden">
            <div class="absolute top-0 right-0 bg-blue-100 text-blue-800 text-[10px] font-bold px-3 py-1 rounded-bl-lg uppercase tracking-wider">$10.01 Co-Pay Applies</div>
            <div class="w-12 h-12 rounded-xl bg-orange-50 text-orange-500 flex items-center justify-center mb-6 mt-2">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" /></svg>
            </div>
            <h3 class="text-xl font-bold text-foreground mb-3">The Tablet Offer</h3>
            <p class="text-foreground/75 leading-relaxed text-sm font-medium">
              Eligible users can opt to receive a capable 8-inch Wi-Fi/LTE Android tablet. In strict compliance with federal program rules, this device discount requires a standard, one-time $10.01 co-pay.
            </p>
          </div>

          <div class="bg-muted/30 rounded-2xl p-8 border border-border shadow-sm flex flex-col hover:border-orange-300 transition-colors">
            <div class="w-12 h-12 rounded-xl bg-orange-50 text-orange-500 flex items-center justify-center mb-6">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5zm6-10.125a1.875 1.875 0 11-3.75 0 1.875 1.875 0 013.75 0zm1.294 6.336a6.721 6.721 0 01-3.17.789 6.721 6.721 0 01-3.168-.789 3.376 3.376 0 016.338 0z" /></svg>
            </div>
            <h3 class="text-xl font-bold text-foreground mb-3">Free SIM & Shipping</h3>
            <p class="text-foreground/75 leading-relaxed text-sm font-medium">
              Want to keep your own phone? StandUp Wireless will mail you a free 3-in-1 SIM card at no cost. Just pop it into your unlocked device to activate your free monthly data.
            </p>
          </div>

          <div class="bg-muted/30 rounded-2xl p-8 border border-border shadow-sm flex flex-col hover:border-orange-300 transition-colors">
            <div class="w-12 h-12 rounded-xl bg-orange-50 text-orange-500 flex items-center justify-center mb-6">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z" /></svg>
            </div>
            <h3 class="text-xl font-bold text-foreground mb-3">Reliable 5G Coverage</h3>
            <p class="text-foreground/75 leading-relaxed text-sm font-medium">
              You won't have to deal with spotty, unreliable service. StandUp Wireless uses the highly rated nationwide T-Mobile 5G network, ensuring you stay connected when it matters most.
            </p>
          </div>

        </div>
      </div>
    </section>

    <!-- ==========================================
         SECTION 4: HOW TO QUALIFY
    =========================================== -->
    <section class="relative w-full py-16 lg:py-24 bg-slate-50 border-t border-border" style="content-visibility: auto;">
      <div class="mx-auto w-full max-w-5xl px-4 sm:px-6 lg:px-8">
        
        <div class="text-center mb-12">
          <h2 class="text-3xl font-extrabold tracking-tight text-foreground sm:text-4xl mb-4">
            How to Qualify for StandUp Wireless
          </h2>
          <p class="text-lg text-foreground/75 leading-relaxed">
            As an official Lifeline provider, StandUp Wireless makes it easy to prove your eligibility. You can qualify quickly through either your income or your participation in government programs.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          
          <!-- Income Based -->
          <div class="bg-white rounded-2xl border border-border p-8 shadow-sm">
            <div class="flex items-center gap-4 mb-6 border-b border-border pb-4">
              <div class="w-10 h-10 rounded-full bg-orange-50 text-orange-600 flex items-center justify-center">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
              </div>
              <h3 class="text-xl font-bold text-foreground">Income-Based Qualification</h3>
            </div>
            <p class="text-foreground/75 leading-relaxed font-medium mb-6">
              You are eligible if your household income is at or below <strong>135% of the Federal Poverty Guidelines</strong>.
            </p>
            <ul class="space-y-3">
              <li class="flex items-start gap-3 text-sm text-foreground/80 font-medium">
                <svg class="w-5 h-5 text-success shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
                Have your prior year's tax return or current pay stubs ready.
              </li>
              <li class="flex items-start gap-3 text-sm text-foreground/80 font-medium">
                <svg class="w-5 h-5 text-success shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
                The required income amount scales up with the size of your family.
              </li>
            </ul>
          </div>

          <!-- Program Based -->
          <div class="bg-white rounded-2xl border border-border p-8 shadow-sm">
            <div class="flex items-center gap-4 mb-6 border-b border-border pb-4">
              <div class="w-10 h-10 rounded-full bg-blue-50 text-blue-600 flex items-center justify-center">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
              </div>
              <h3 class="text-xl font-bold text-foreground">Program-Based Qualification</h3>
            </div>
            <p class="text-foreground/75 leading-relaxed font-medium mb-6">
              You automatically bypass income checks if you already participate in programs like:
            </p>
            <ul class="space-y-3">
              <li class="flex items-start gap-3 text-sm text-foreground/80 font-medium">
                <svg class="w-5 h-5 text-success shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
                SNAP (Supplemental Nutrition Assistance Program)
              </li>
              <li class="flex items-start gap-3 text-sm text-foreground/80 font-medium">
                <svg class="w-5 h-5 text-success shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
                Medicaid
              </li>
              <li class="flex items-start gap-3 text-sm text-foreground/80 font-medium">
                <svg class="w-5 h-5 text-success shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
                Supplemental Security Income (SSI)
              </li>
              <li class="flex items-start gap-3 text-sm text-foreground/80 font-medium">
                <svg class="w-5 h-5 text-success shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
                Federal Public Housing Assistance (FPHA)
              </li>
            </ul>
          </div>

        </div>
      </div>
    </section>

    <!-- ==========================================
         SECTION 5: OFFICIAL CONTACT INFORMATION
    =========================================== -->
    <section class="relative w-full py-12 lg:py-16 bg-white border-t border-border">
      <div class="mx-auto w-full max-w-4xl px-4 sm:px-6 lg:px-8">
        
        <div class="bg-slate-900 rounded-3xl p-8 sm:p-10 text-white shadow-xl flex flex-col md:flex-row items-center justify-between gap-8 relative overflow-hidden">
          <div class="absolute inset-0 z-0 bg-gradient-to-r from-orange-600/20 to-transparent pointer-events-none"></div>
          
          <div class="max-w-lg text-center md:text-left relative z-10">
            <div class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-xs font-bold uppercase tracking-wider mb-4 border border-white/20">
              <svg class="w-4 h-4 text-orange-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
              Bilingual Support Available
            </div>
            <h2 class="text-2xl sm:text-3xl font-extrabold mb-4">Need Help With Your Application?</h2>
            <p class="text-slate-300 font-medium leading-relaxed m-0">
              We provide independent guidance to help you navigate your options. If you need to check your exact application status or have technical issues with a StandUp device, please contact their official customer service team.
            </p>
          </div>

          <div class="flex flex-col gap-4 w-full md:w-auto shrink-0 relative z-10">
            <a href="tel:18008542192" class="flex items-center justify-center gap-3 bg-orange-500 text-white px-6 py-4 rounded-xl font-bold hover:bg-orange-600 transition-colors shadow-md">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
              1-800-854-2192
            </a>
            <a href="https://standupwireless.com/" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center gap-3 bg-white text-slate-900 px-6 py-4 rounded-xl font-bold hover:bg-slate-100 transition-colors shadow-md">
              <svg class="w-5 h-5 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" /></svg>
              standupwireless.com
            </a>
          </div>
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 6: PROVIDER FAQ
    =========================================== -->
    <section class="relative w-full py-16 lg:py-24 bg-muted/30 border-t border-border" style="content-visibility: auto;">
      <div class="mx-auto w-full max-w-4xl px-4 sm:px-6 lg:px-8">
        
        <div class="text-center mb-12">
          <h2 class="text-3xl font-extrabold tracking-tight text-foreground sm:text-4xl mb-4">
            StandUp Wireless FAQ
          </h2>
        </div>

        <div class="space-y-4">
          
          <details class="group bg-white border border-border rounded-xl overflow-hidden shadow-sm [&_summary::-webkit-details-marker]:hidden">
            <summary class="flex justify-between items-center font-bold cursor-pointer list-none p-6 text-foreground hover:bg-muted/50 transition-colors text-lg">
              Is the StandUp Wireless tablet completely free?
              <span class="transition duration-300 group-open:-rotate-180 text-orange-500 shrink-0 ml-4">
                <svg fill="none" height="24" shape-rendering="geometricPrecision" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" viewBox="0 0 24 24" width="24" aria-hidden="true"><path d="M6 9l6 6 6-6"></path></svg>
